<html lang="en" ng-app="EasyChoice">

<head>
    <meta charset="utf-8">
    <title>
        <%= title %>
    </title>

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">

    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.18/angular.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.18/angular-resource.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.18/angular-sanitize.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/masonry/3.1.5/masonry.pkgd.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.7.0/moment.min.js"></script>
    <script src="/javascript/core.js"></script>
    <script src="/javascript/controller/home.js"></script>
</head>

<body style="padding-left: 30px; padding-right: 30px;">
    <!-- the root element of the view assigned to the TweetList javascript controller-->
    <div ng-controller="HomeController">

        <div class="page-header">
            <h1>
                <%= title %>
            </h1>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Take your choice
                    </div>
                    <div class="panel-body">
                        <form ng-submit="postVote()">
                            <div class="form-group col-md-12">
                                <label for="email">Email</label>
                                <input type="text" class="form-control" id="email" placeholder="abc@abc.com" ng-model="formData.email">
                            </div>
                            <div class="form-group col-md-12">
                                <label for="restaurant">Restaurant</label>
                                <select class="form-control" id="restaurant" ng-model="formData.restaurant" ng-options="restaurant.name for restaurant in restaurants track by restaurant.code"></select>
                            </div>
                            <div class="form-group col-md-12">
                                <button id="btn_vote" type="submit" class="btn btn-lg btn-primary col-md-12">Vote</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        Daily Result
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Restaurant</th>
                                    <th>Votes</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="result in dailyResult | orderBy:'-votesCount'">
                                    <td>{{result.restaurant}}</td>
                                    <td>{{result.votesCount}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        Weekly Result
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Day</th>
                                    <th>Restaurant</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="result in weeklyResult">
                                    <td>{{result.weekDay}} ({{result.date}})</td>
                                    <td>{{result.restaurant}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>